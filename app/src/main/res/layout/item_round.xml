<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor para la cabecera con fondo azul oscuro -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <!-- TextView de la jornada, centrado -->
            <TextView
                android:id="@+id/tv_round_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="JORNADA 1" />

            <!-- ===================== INICIO DE LA MODIFICACIÓN ===================== -->
            <!-- TextView para la fecha, alineado a la derecha -->
            <TextView
                android:id="@+id/tv_round_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="28/10/2024" />
            <!-- ====================== FIN DE LA MODIFICACIÓN ======================= -->

        </FrameLayout>

        <!-- RecyclerView para los partidos de esta jornada -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_match"
            tools:itemCount="3"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
