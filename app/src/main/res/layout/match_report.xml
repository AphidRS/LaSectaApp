<!-- res/layout/fragment_match_details.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.FragmentMatchDetails">

    <!-- Usamos un LinearLayout como contenedor principal para las dos cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- ===================== CARD 1: INFORMACIÓN DEL PARTIDO ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_match_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Cabecera: Jornada, Fecha -->
                <TextView
                    android:id="@+id/tv_match_header_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="TEMPORADA 2025-2026 - GRUPO 3 - JORNADA 1"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Escudo Equipo Local -->
                <ImageView
                    android:id="@+id/iv_details_local_shield"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="@id/tv_details_local_team"
                    app:layout_constraintStart_toStartOf="@id/tv_details_local_team"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_header_info"
                    tools:src="@tools:sample/avatars" />

                <!-- Escudo Equipo Visitante -->
                <ImageView
                    android:id="@+id/iv_details_visitor_shield"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="@id/tv_details_visitor_team"
                    app:layout_constraintStart_toStartOf="@id/tv_details_visitor_team"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_header_info"
                    tools:src="@tools:sample/avatars" />

                <!-- Resultado -->
                <TextView
                    android:id="@+id/tv_details_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="0 - 1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_details_local_shield"
                    app:layout_constraintEnd_toStartOf="@id/tv_details_visitor_team"
                    app:layout_constraintStart_toEndOf="@id/tv_details_local_team"
                    app:layout_constraintTop_toTopOf="@id/iv_details_local_shield" />

                <!-- Nombre Equipo Local -->
                <TextView
                    android:id="@+id/tv_details_local_team"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="C.D.E. CIUDAD DE PINTO 'A'"
                    app:layout_constraintEnd_toStartOf="@+id/tv_details_result"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_details_local_shield" />

                <!-- Nombre Equipo Visitante -->
                <TextView
                    android:id="@+id/tv_details_visitor_team"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="ESCUELA DE FUTBOL ARGANDA 'A'"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_details_result"
                    app:layout_constraintTop_toBottomOf="@id/iv_details_visitor_shield" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===================== CARD 2: DETALLES DEL ACTA ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_match_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <!-- Usamos un LinearLayout vertical para apilar las secciones de detalles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título de Titulares -->
                <TextView
                    android:id="@+id/tv_titulares_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="TITULARES"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <!-- Contenedor para las dos columnas de alineaciones -->
                <LinearLayout
                    android:id="@+id/ll_lineups_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <!-- Columna Izquierda (Equipo Local) -->
                    <LinearLayout
                        android:id="@+id/ll_local_lineup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp"
                        tools:ignore="RtlSymmetry">
                        <!-- Jugadores locales se añadirán aquí dinámicamente -->
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="1. Jugador Local Uno"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="2. Jugador Local Dos"/>
                    </LinearLayout>

                    <!-- Columna Derecha (Equipo Visitante) -->
                    <LinearLayout
                        android:id="@+id/ll_visitor_lineup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        tools:ignore="RtlSymmetry">
                        <!-- Jugadores visitantes se añadirán aquí dinámicamente -->
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="1. Jugador Visitante Uno"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="2. Jugador Visitante Dos"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Título Goles -->
                <TextView
                    android:id="@+id/tv_goles_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:text="GOLES"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <!-- Contenedor para la lista de goles -->
                <LinearLayout
                    android:id="@+id/ll_goals_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <!-- Los goles se añadirán aquí dinámicamente -->
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="(1 - 0) Jugador Local - Minuto 25"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="(1 - 1) Jugador Visitante - Minuto 78"/>
                </LinearLayout>

                <!-- Título Árbitros -->
                <TextView
                    android:id="@+id/tv_arbitros_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text="ÁRBITROS"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <!-- Contenedor para los árbitros -->
                <LinearLayout
                    android:id="@+id/ll_referees_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <!-- Los árbitros se añadirán aquí dinámicamente -->
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="Árbitro: Nombre Apellido"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="Asistente 1: Nombre Apellido"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
