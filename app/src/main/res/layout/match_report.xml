<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.FragmentMatchDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- ===================== CARD 1: INFORMACIÓN DEL PARTIDO ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_match_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Cabecera: Jornada, Fecha -->
                <TextView
                    android:id="@+id/tv_match_header_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="JORNADA 1 - 01/01/2025" />

                <!-- Escudo Equipo Local -->
                <ImageView
                    android:id="@+id/iv_details_local_shield"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_details_result"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_match_header_info"
                    tools:src="@tools:sample/avatars" />

                <!-- Resultado -->
                <TextView
                    android:id="@+id/tv_details_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/iv_details_local_shield"
                    app:layout_constraintEnd_toStartOf="@+id/iv_details_visitor_shield"
                    app:layout_constraintStart_toEndOf="@id/iv_details_local_shield"
                    app:layout_constraintTop_toTopOf="@id/iv_details_local_shield"
                    tools:text="3 – 1" />

                <!-- Escudo Equipo Visitante -->
                <ImageView
                    android:id="@+id/iv_details_visitor_shield"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_details_result"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_details_result"
                    app:layout_constraintTop_toTopOf="@id/tv_details_result"
                    tools:src="@tools:sample/avatars" />

                <!-- Nombre Equipo Local -->
                <TextView
                    android:id="@+id/tv_details_local_team"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tv_details_result"
                    app:layout_constraintStart_toStartOf="@id/iv_details_local_shield"
                    app:layout_constraintTop_toBottomOf="@id/iv_details_local_shield"
                    tools:text="EQUIPO LOCAL MUY LARGO" />

                <!-- Nombre Equipo Visitante -->
                <TextView
                    android:id="@+id/tv_details_visitor_team"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/iv_details_visitor_shield"
                    app:layout_constraintStart_toEndOf="@+id/tv_details_result"
                    app:layout_constraintTop_toBottomOf="@id/iv_details_visitor_shield"
                    tools:text="EQUIPO VISITANTE" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===================== CARD 2: DETALLES DEL ACTA ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_match_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Título de Titulares -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TITULARES"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <!-- Contenedor para las dos columnas de alineaciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <!-- Columna Izquierda (Equipo Local) -->
                    <LinearLayout
                        android:id="@+id/ll_local_lineup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp"
                        tools:ignore="RtlSymmetry">
                        <!-- Jugadores locales se añadirán aquí dinámicamente -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1. Jugador Local Uno" />
                    </LinearLayout>

                    <!-- Columna Derecha (Equipo Visitante) -->
                    <LinearLayout
                        android:id="@+id/ll_visitor_lineup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp"
                        tools:ignore="RtlSymmetry">
                        <!-- Jugadores visitantes se añadirán aquí dinámicamente -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1. Jugador Visitante Uno" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Título Goles -->
                <TextView
                    android:id="@+id/tv_goles_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text="GOLES"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Contenedor para la lista de goles -->
                <LinearLayout
                    android:id="@+id/ll_goals_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <!-- Los goles se añadirán aquí dinámicamente -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="(1 - 0) Jugador Local - Minuto 25" />
                </LinearLayout>

                <!-- Título Árbitros -->
                <TextView
                    android:id="@+id/tv_arbitros_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    android:text="ÁRBITROS"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textStyle="bold" />

                <!-- Contenedor para los árbitros -->
                <LinearLayout
                    android:id="@+id/ll_referees_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <!-- Los árbitros se añadirán aquí dinámicamente -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Árbitro: Nombre Apellido" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
