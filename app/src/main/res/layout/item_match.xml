<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/bottom_nav_color_selector"
    app:strokeWidth="1dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Escudo Local -->
        <ImageView
            android:id="@+id/iv_local_shield"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/avatars" />

        <!-- 1. CardView para el recuadro del resultado -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_result_container"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/score_color"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- 2. LinearLayout para centrar el contenido verticalmente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- Texto del marcador -->
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="10 - 1" />

                <!-- "Ver Acta" invisible -->
                <TextView
                    android:id="@+id/tv_view_match_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Acta"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Nombre Equipo Local -->
        <TextView
            android:id="@+id/tv_local_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_result_container"
            app:layout_constraintStart_toEndOf="@id/iv_local_shield"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EQUIPO LOCAL CON UN NOMBRE MUY LARGO" />

        <!-- Escudo Visitante -->
        <ImageView
            android:id="@+id/iv_visitor_shield"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/avatars" />

        <!-- Nombre Equipo Visitante -->
        <TextView
            android:id="@+id/tv_visitor_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_visitor_shield"
            app:layout_constraintStart_toEndOf="@id/cv_result_container"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="EQUIPO VISITANTE CON UN NOMBRE MUY LARGO" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
