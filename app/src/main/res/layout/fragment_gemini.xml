<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragments.FragmentGemini">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última consulta realizada:"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/tv_last_question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:textStyle="bold"
            android:background="@drawable/bg_rounded_textview"
            android:text="Aún no has hecho ninguna pregunta."
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_last_answer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/cardview_light_background"
            android:padding="12dp"
            android:text="Esperando respuesta..."
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/black"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Nueva pregunta:"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <EditText
            android:id="@+id/et_new_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="¿Qué quieres saber?"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:minLines="2"
            android:textColorHint="#808080"
            />

        <Button
            android:id="@+id/btn_send_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Enviar" />

    </LinearLayout>
</ScrollView>
